<style>
  #loader_main {
        background-color: rgba(33, 36, 45);
        height: 100%;
        width: 100%;
        height: 100vh;
        position: fixed;
        z-index:999;

    }
   @keyframes lds-dual-ring {
    0% {
    -webkit-transform: rotate(0);
    transform: rotate(0);
    }
    100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
    }
}
.lds-dual-ring {
    left: 0;
    position: absolute;
    right: 0;
    margin: auto;
    top: 38%;
    transform: translateY(-50%);
    width: 200px !important;
    height: 200px !important;
}
.lds-dual-ring .wrapper {
    height: 200px;
    width: 200px;
    margin: auto;
}
.lds-dual-ring .wrapper div {
    position: absolute;
    width: 160px;
    height: 160px;
    top: 20px;
    left: 20px;
    border-radius: 50%;
    border: 8px solid #000;
    border-color: #fdfdfd transparent #fdfdfd transparent;
    -webkit-animation: lds-dual-ring 1s linear infinite;
    animation: lds-dual-ring 1s linear infinite;
}

.loader {
	-webkit-perspective: 9000px;
	perspective: 9000px;
	position: fixed;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
    
}

.loader>span{
	font-size: 30px;
	font-family: "franklin gothic medium",sans-serif;
	display: inline-block;
	animation:flip 2.6s infinite linear;
	transform-origin:0 70%;
	transform-style:preserve-3d;
	-webkit-transform-style:preserve-3d;
}

@keyframes flip{
	35%{
		transform: rotateX(360deg);
	}
	100%{
		transform: rotatex(360deg);
	}
}


.loader>span:nth-child(even){
	color:white;

}

.loader>span:nth-child(2){
	animation-delay: 0.3s;
}

.loader>span:nth-child(3){
	animation-delay: 0.6s;
}

.loader>span:nth-child(4){
	animation-delay: 0.9s;
}

.loader>span:nth-child(5){
	animation-delay: 1.2s;
}

.loader>span:nth-child(6){
	animation-delay: 1.5s
}

.loader>span:nth-child(7){
	animation-delay: 1.8s
}
</style>
<div id="loader_main">
  <div class="lds-dual-ring">
    <article class="wrapper">
    <div></div>
    </article>
  </div>
  <div class="loader">
        <span><img src="https://cdn.shopify.com/s/files/1/0755/9620/2277/files/m.svg?v=1706266449"></span>
        <span><img src="https://cdn.shopify.com/s/files/1/0755/9620/2277/files/i.svg?v=1706266449"></span>
        <span><img src="https://cdn.shopify.com/s/files/1/0755/9620/2277/files/r.svg?v=1706266449"></span>
        <span><img src="https://cdn.shopify.com/s/files/1/0755/9620/2277/files/a.svg?v=1706266448"></span>
  </div>
</div>