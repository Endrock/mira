<div class="sticky-abc">
  <div class="sticky-atc" id="sticky-atc-custom">
    <div class="sticky-atc__image">
      {{
        product.media[0].preview_image
        | image_url: width: 86
        | image_tag:
          class: image_class,
          loading: lazy,
          sizes: sizes,
          widths: '246, 493, 600, 713, 823, 990, 1100, 1206, 1346, 1426, 1646, 1946'
      }}
    </div>
    <div class="sticky-atc__left">
      <div class="sticky-atc__title">{{ product.title }}</div>
      <div class="sticky-atc__review-box yotpo bottomLine sticky-atc__review-bg" data-product-id="{{ product.id }}"></div>
      <a class="sticky-atc__button" href="#atc-section">Select Your Product</a>
    </div>
  </div>
</div>