<script>
document.addEventListener('DOMContentLoaded', function () {
    var button = document.getElementById('myButton');

    if (button) {
        button.addEventListener('click', function () {
            var section = document.getElementById('atc-section');

            if (section) {
                section.scrollIntoView({
                    behavior: 'smooth',
                });
            }
        });
    }
});
</script>
<style>
    @media screen and (min-width: 768px) {
        .sticky-atc {
            display: none !important;
        }
    }
  .sticky-atc {
    position: fixed;
    top: 72px;
    z-index: 100;
    display: flex;
    width: 390px;
    padding: 8px 24px;
    justify-content: center;
    align-items: center;
    gap: 16px;
    background: #fff;
    box-shadow: 0px 0px 13px 0px rgba(0, 54, 48, 0.14);
  }

  .sticky-atc__left {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    flex: 1 0 0;
  }
  .sticky-atc__title {
    color: #003630;
    font-family: Aeonik;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    margin-bottom: 2px;
  }
  .sticky-atc__button {
    display: flex;
    padding: 6px 56px;
    margin-top: 8px;
    justify-content: center;
    align-items: center;
    align-self: stretch;
    border-radius: 30px;
    background: #3fc15f;
    white-space: nowrap;
    border: none;
    color: #fff;
  }

  .sticky-atc__image {
    width: 86px;
    height: 86px;
  }

  .sticky-atc__review-bg {
    background: #fff;
  }
</style>

<div class="sticky-atc">
  <div class="sticky-atc__image">
    {{
      product.media[0].preview_image
      | image_url: width: 86
      | image_tag:
        class: image_class,
        loading: lazy,
        sizes: sizes,
        widths: '246, 493, 600, 713, 823, 990, 1100, 1206, 1346, 1426, 1646, 1946'
    }}
  </div>
  <div class="sticky-atc__left">
    <div class="sticky-atc__title">{{ product.title }}</div>
    <div class="sticky-atc__review-box yotpo bottomLine sticky-atc__review-bg" data-product-id="{{ product.id }}"></div>
    <button id="myButton" class="sticky-atc__button">Select Your Product</button>
  </div>
</div>
